# === SERVEUR ===
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000

# === BASE DE DONNÉES POSTGRESQL ===
DATABASE_URL="postgresql://genidoc_user:genidoc_password@localhost:5432/genidoc_db"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=genidoc_db
DATABASE_USER=genidoc_user
DATABASE_PASSWORD=genidoc_password

# === AUTHENTIFICATION JWT ===
JWT_SECRET=your_super_secret_jwt_key_change_in_production_12345
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_12345
JWT_REFRESH_EXPIRATION=7d

# === SÉCURITÉ SESSIONS ===
SESSION_SECRET=your_session_secret_key_change_in_production

# === STRIPE PAIEMENTS ===
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === SENDGRID EMAIL ===
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@genidoc.com
SENDGRID_FROM_NAME=GeniDoc

# === AWS S3 FILE UPLOADS ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=genidoc-uploads
S3_UPLOAD_ENABLED=false
LOCAL_UPLOAD_DIR=./uploads

# === REDIS CACHE ===
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# === SENTRY ERROR TRACKING ===
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENABLED=false

# === GOOGLE MAPS ===
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# === EMAIL CONFIGURATION ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@genidoc.com

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CORS ===
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# === LOGGING ===
LOG_LEVEL=info
LOG_FORMAT=combined
