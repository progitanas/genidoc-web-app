# === SERVEUR ===
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000

# === BASE DE DONNÉES POSTGRESQL ===
DATABASE_URL="postgresql://genidoc_user:genidoc_password@localhost:5432/genidoc_db"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=genidoc_db
DATABASE_USER=genidoc_user
DATABASE_PASSWORD=genidoc_password

# === AUTHENTIFICATION JWT ===
JWT_SECRET=dev_super_secret_jwt_key_change_in_production_12345
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=dev_super_secret_refresh_key_change_in_production_12345
JWT_REFRESH_EXPIRATION=7d

# === SÉCURITÉ SESSIONS ===
SESSION_SECRET=dev_session_secret_key_change_in_production

# === STRIPE PAIEMENTS (Mode Test) ===
STRIPE_PUBLIC_KEY=pk_test_51234567890
STRIPE_SECRET_KEY=sk_test_51234567890
STRIPE_WEBHOOK_SECRET=whsec_test_1234567890

# === SENDGRID EMAIL ===
SENDGRID_API_KEY=SG.dev_key
SENDGRID_FROM_EMAIL=noreply@genidoc.local
SENDGRID_FROM_NAME=GeniDoc

# === AWS S3 FILE UPLOADS ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_S3_BUCKET=genidoc-uploads
S3_UPLOAD_ENABLED=false
LOCAL_UPLOAD_DIR=./uploads

# === REDIS CACHE ===
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# === SENTRY ERROR TRACKING ===
SENTRY_DSN=https://dev@sentry.local/1
SENTRY_ENABLED=false

# === GOOGLE MAPS ===
GOOGLE_MAPS_API_KEY=dev_key

# === EMAIL CONFIGURATION ===
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev
SMTP_PASSWORD=dev
EMAIL_FROM=noreply@genidoc.local

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CORS ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# === LOGGING ===
LOG_LEVEL=debug
LOG_FORMAT=combined

# === RECONNAISSANCE D'IMAGE ===
GOOGLE_VISION_API_KEY=your_google_vision_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Configuration uploads
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads